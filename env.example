# YTDL Helper Configuration
# Copy this file to .env and modify as needed

# Output directory for downloads
YTDL_OUTPUT_DIR=./download

# Default format
YTDL_FORMAT=best

# Audio format for audio-only downloads
YTDL_AUDIO_FORMAT=mp3

# Video format preference
YTDL_VIDEO_FORMAT=mp4

# Quality preference
YTDL_QUALITY=best

# Maximum file size (e.g., "100MB", "1GB")
YTDL_MAX_FILESIZE=

# Maximum duration in seconds
YTDL_MAX_DURATION=

# Playlist settings
YTDL_MAX_PLAYLIST_ITEMS=10
YTDL_ALLOW_PLAYLIST_DOWNLOAD=false

# User confirmation settings
YTDL_CONFIRM_RIGHTS=true
YTDL_SKIP_RIGHTS_CHECK=false

# Metadata settings
YTDL_WRITE_INFO_JSON=false
YTDL_WRITE_THUMBNAIL=false
YTDL_WRITE_DESCRIPTION=false
YTDL_WRITE_ANNOTATIONS=false
YTDL_WRITE_SUBTITLES=false

# Subtitle languages (comma-separated)
YTDL_SUBTITLE_LANGS=en

# yt-dlp specific settings
YTDL_VERBOSE=false
YTDL_QUIET=false
YTDL_NO_WARNINGS=false
YTDL_IGNORE_ERRORS=false
YTDL_RETRIES=3
YTDL_FRAGMENT_RETRIES=10
YTDL_BUFFER_SIZE=1024
YTDL_HTTP_CHUNK_SIZE=1048576

# Cache and temporary directories
YTDL_CACHE_DIR=
YTDL_TEMP_DIR=

